---
import { Icon } from 'astro-icon/components';
import type { Link } from '../types';

interface Props {
  link: Link;
}

const { link } = Astro.props
---

<a href={link.href} class="link" target="_blank">
  <Icon name={link.icon} title={link.href} />
</a>

<style>
  .link {
    display: flex;
    opacity: 0.5;
  }
  .link svg {
    color: #ffffff;
    width: 32px;
    height: 32px;
  }
  .link:is(:hover, :focus-within) {
    opacity: 1;
  }
</style>
